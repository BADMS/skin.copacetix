<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_533_WallThumb">
		<control type="group">
			<visible>Control.IsVisible(533)</visible>
			<!-- List -->
			<control type="panel" id="533">
				<width>1920</width>
				<height>1080</height>
				<onleft>533</onleft>
				<onright>533</onright>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<focusposition>1</focusposition>
				<orientation>horizontal</orientation>
				<viewtype label="31141">list</viewtype>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)] + Skin.HasSetting(EnableThumb)</visible>
				<visible>String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,special://) | String.Contains(Container.FolderPath,addons://) | String.Contains(Container.FolderPath,musicdb://) | String.Contains(Container.FolderPath,androidapp://)</visible>
				<include>MediaInfoHideAnimation</include>
				<itemlayout height="270" width="480">
					<control type="group">
						<visible>!Window.IsVisible(contextmenu)</visible>
						<control type="image">
							<width>480</width>
							<height>270</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[ThumbIcon]</texture>
						</control>
						<control type="image">
							<centerleft>240</centerleft>
							<top>130</top>
							<width>240</width>
							<height>135</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<visible>IsEmpty(ListItem.Art(landscape))</visible>
						</control>
						<control type="image">
							<width>480</width>
							<height>270</height>
							<texture colordiffuse="$VAR[DiffuseColor]">views/white_50.png</texture>
						</control>
						<include>WatchedIndicator</include>
						<animation effect="fade" start="0" end="100" time="200" delay="0">Visible</animation>
					</control>
				</itemlayout>
				<focusedlayout height="270" width="480">
					<control type="button">
						<visible>false</visible>
						<onfocus condition="Container.Column(0)">SetProperty(CurrentColumn,0,home)</onfocus>
						<onfocus condition="Container.Column(1)">SetProperty(CurrentColumn,1,home)</onfocus>
						<onfocus condition="Container.Column(2)">SetProperty(CurrentColumn,2,home)</onfocus>
						<onfocus condition="Container.Column(3)">SetProperty(CurrentColumn,3,home)</onfocus>
						<onfocus condition="Container.Row(0)">SetProperty(CurrentRow,0,home)</onfocus>
						<onfocus condition="Container.Row(1)">SetProperty(CurrentRow,1,home)</onfocus>
						<onfocus condition="Container.Row(2)">SetProperty(CurrentRow,2,home)</onfocus>
						<onfocus condition="Container.Row(3)">SetProperty(CurrentRow,3,home)</onfocus>
					</control>
					<control type="image">
						<width>480</width>
						<height>270</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[ThumbIcon]</texture>
					</control>
					<control type="image">
						<centerleft>240</centerleft>
						<top>130</top>
						<width>240</width>
						<height>135</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
						<visible>IsEmpty(ListItem.Art(landscape))</visible>
					</control>
					<control type="image">
						<width>480</width>
						<height>270</height>
						<texture colordiffuse="$VAR[DiffuseColor]">views/white_50.png</texture>
						<animation center="auto" condition="Control.HasFocus(533)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(533)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
					</control>
					<include>WatchedIndicator</include>
					<control type="image">
						<width>480</width>
						<height>270</height>
						<texture colordiffuse="$VAR[TextColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
						<animation center="auto" condition="Control.HasFocus(533)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(533)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">UnFocus</animation>
						<visible>!Control.HasFocus(60) + !Control.HasFocus(3000) + !String.Contains(ListItem.Icon,default)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="image">
				<visible>Window.IsVisible(contextmenu)</visible>
				<include>FullscreenDimensions</include>
				<texture colordiffuse="$VAR[DiffuseColor]">views/overlay_70.png</texture>
				<animation effect="fade" start="0" end="100" time="200" delay="0">Visible</animation>
			</control>
		</control>
	</include>
</includes>